<section class="container">


  <nav>
    <h2>{{ pollTitle }}</h2>
    <section class="add-poll">
      <a href="/polls/{{pollTitle}}/add-poll">

        Add a poll!
        <svg xmlns="http://www.w3.org/2000/svg" height="36" viewBox="0 0 24 24" width="36">
          <path d="M0 0h24v24H0z" fill="none"/>
          <path d="M13 7h-2v4H7v2h4v4h2v-4h4v-2h-4V7zm-1-5C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" style="&#10;    fill: white;&#10;"/>
        </svg>
      </a>
    </section>
  </nav>
  {{#each polls}}

    <section class="poll">
      <header>
        <h3>{{pollQuestion}}</h3>
      </header>


      <section class="answers">
          {{#switch pollAnswer.type}}
            {{#case 'multiple'}}
              {{#each ../pollAnswer.values}}
                <section>
                  <div class="answer{{@key}}"></div>
                  <p>{{this}}</p>
                </section>
              {{/each}}
            {{/case}}
            {{#case 'open-text'}}
              <section>
                <div class="open-question-text"></div>
                <p> Open question. (text)</p>
              </section>
            {{/case}}
            {{#case 'open-number'}}
              <section>
                <div class="open-question-number"></div>
                <p> Open question. (number)</p>
              </section>
            {{/case}}
          {{/switch}}


      </section>

      <section class="tools">


        {{#if pollStatus}}
        <section class="tool tool-activated">
          <a class="status tool-activated-text" href="/polls/{{../pollTitle }}/activate-poll/{{@key}}">
            <svg xmlns="http://www.w3.org/2000/svg" height="36" viewBox="0 0 24 24" width="36">
              <path d="M0 0h24v24H0z" fill="none"/>
              <path d="M12 2.02c-5.51 0-9.98 4.47-9.98 9.98s4.47 9.98 9.98 9.98 9.98-4.47 9.98-9.98S17.51 2.02 12 2.02zM11.48 20v-6.26H8L13 4v6.26h3.35L11.48 20z" style="fill: var(--dark-color);"/>
            </svg>
            Deactivate Poll
          </a>
        </section>
        {{else}}
          <section class="tool">
            <a href="/polls/{{../pollTitle }}/activate-poll/{{@key}}" class="status">
              <svg xmlns="http://www.w3.org/2000/svg" height="36" viewBox="0 0 24 24" width="36">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path d="M12 2.02c-5.51 0-9.98 4.47-9.98 9.98s4.47 9.98 9.98 9.98 9.98-4.47 9.98-9.98S17.51 2.02 12 2.02zM11.48 20v-6.26H8L13 4v6.26h3.35L11.48 20z"style="fill: var(--result-color-3);"/>
              </svg>
              Activate Poll
            </a>
          </section>
        {{/if}}


        <section class="tool">
          <a href="/polls/{{../pollTitle }}/delete-poll/{{@key}}">
            <svg xmlns="http://www.w3.org/2000/svg" height="36" viewBox="0 0 24 24" width="36">
              <path d="M0 0h24v24H0z" fill="none"/>
              <path d="M0 0h24v24H0V0z" fill="none"/>
              <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z" style="fill:var(--light-color)"/>
            </svg>
            Delete Poll
          </a>
        </section>
      </section>
    </section>

  {{/each}}



</section>
